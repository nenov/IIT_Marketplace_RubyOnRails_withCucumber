<% provide(:title, "#{@advert.title}") %>
<h1><%=@advert.title%></h1>


<p><%=@advert.description%></p>

<p><%= @advert.price %></p><br/><br/>

<%if @advert.advertphoto_file_name != nil%>
   <%= image_tag @advert.advertphoto.url(:medium)%><br/><br/><br/><br/>
<%end%>

<p>Price limit: $ 
<%= @advert.price %></p><br/><br/><br/>

<% if signed_in? && correct_user?%>
<%=link_to "Edit", edit_advert_path, class: "btn btn-inverse"%><br/>
<br>

<%= button_to "Delete", advert_path, method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure you want to delete this advert?"}%><br/>
<br>
<% end %>
<%=link_to "Back to ads list", adverts_path, class: "btn btn-primary"%><br/>


