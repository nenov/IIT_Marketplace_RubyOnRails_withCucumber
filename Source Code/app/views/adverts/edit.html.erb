<% provide(:title, "Edit") %>

<h1>Edit your Advertisement</h1><br/><br/>
<a class="btn" href="/adverts/<%= "#{@advert.id}"%>"><i class=" icon-circle-arrow-left"></i></a><b> Back to the ad</b><br/><br/>

<%= form_for @advert, html: {multipart: true} do |f| %>

<div class="field">
  <%= f.label :title, "Title" %><br/>
  <%= f.text_field :title %><br/><br/><br/>
</div>

<div class="field">
    <%= f.label :description, "Description" %><br/>
    <%= f.text_area :description %><br/><br/><br/>
  </div>

  <div class="field">
    <%= f.label :price, "Price (USD):"%><br/>
    <%= f.text_field :price%><br/><br/><br/><br/>
  </div>

  <div class="field">
    <%= f.label :advertphoto, "Add photo to your ad"%>
    <%= f.file_field :advertphoto%><br/><br/><br/>
  </div>

  <div class="action">
    <%= f.submit "Submit !", class: "btn btn-success"%>
  </div>

<% end %>